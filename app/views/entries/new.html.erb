<h1 class="mb-4">My Journal Entries</h1>

<div class="container">
  <div class="row">
    <% @entries.each do |entry| %>
      <div class="col-md-4">
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= entry.title %></h5>
            <p class="card-text"><%= entry.description %></p>
            <p><small>Occurred on: <%= entry.occurred_on %></small></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "New Entry", new_entry_path, class: "btn btn-primary mt-3" %>
<%= link_to "Back to Places", places_path, class: "btn btn-secondary mt-3" %>
