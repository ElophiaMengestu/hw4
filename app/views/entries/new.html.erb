
<h1 class="mb-4">New Entry</h1>

<%= form_with url: "/entries", method: "post", local: true do |f| %>
  <%= f.hidden_field :place_id, value: params["place_id"] %>

  <div class="mb-3">
    <%= f.label :title, "Title", class: "form-label" %>
    <%= f.text_field :title, class: "form-control", id: "title_input" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Description", class: "form-label" %>
    <%= f.text_field :description, class: "form-control", id: "description_input" %>
  </div>

  <div class="mb-3">
    <%= f.label :occurred_on, "Occurred On", class: "form-label" %>
    <%= f.date_field :occurred_on, class: "form-control", id: "occurred_on_input" %>
  </div>

  <%= f.submit "Save", class: "btn btn-success" %>
<% end %>
